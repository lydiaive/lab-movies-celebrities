<h2 class="title is-2">Movie Form:</h2>
<form class="box block" action="/movies/create" method="post">
    <div class="field">
        <label class="label" for="title">Movie Title:</label>
        <input type="text" name="title" id="title">
    </div>
    <div class="field">
        <label class="label" for="genre">Genre:</label>
        <input type="text" name="genre" id="genre">
    </div>
    <div class="field">
        <label class="label" for="plot">Plot:</label>
        <input type="text" name="plot" id="plot">
    </div>
    <div class="field">
        {{#each dbCelebs}}
            <input type="checkbox" id="{{this.name}}" name="cast" value="{{this._id}}">
            <label for="{{this.name}}">{{this.name}}</label><br>
        {{/each}}
    </div>
    <button class="button is-primary" type="submit">Create</button>
</form>
